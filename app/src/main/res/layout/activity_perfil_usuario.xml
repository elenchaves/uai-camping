<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilUsuarioActivity">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F4F7">


        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/orange"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Abrir Menu"
                    android:src="@drawable/menu" />

                <TextView
                    android:id="@+id/tv_titulo_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Perfil do Usuário"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/green"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_perfil_usuario"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="Foto de Perfil"
                    android:src="@drawable/mulher_face" />

            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_container"
            android:layout_above="@id/bottom_navigation_container"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/PerfilDataItemContainer">

                    <TextView
                        style="@style/PerfilDataLabel"
                        android:text="Nome:" />

                    <TextView
                        android:id="@+id/tv_nome"
                        style="@style/PerfilDataValue"
                        android:text="Ana Clara" />
                </LinearLayout>

                <LinearLayout style="@style/PerfilDataItemContainer">

                    <TextView
                        style="@style/PerfilDataLabel"
                        android:text="Data de nascimento:" />

                    <TextView
                        android:id="@+id/tv_data_nascimento"
                        style="@style/PerfilDataValue"
                        android:text="12/12/1990" />
                </LinearLayout>

                <LinearLayout style="@style/PerfilDataItemContainer">

                    <TextView
                        style="@style/PerfilDataLabel"
                        android:text="Gênero:" />

                    <TextView
                        android:id="@+id/tv_genero"
                        style="@style/PerfilDataValue"
                        android:text="Feminino" />
                </LinearLayout>

                <LinearLayout style="@style/PerfilDataItemContainer">

                    <TextView
                        style="@style/PerfilDataLabel"
                        android:text="CPF:" />

                    <TextView
                        android:id="@+id/tv_cpf"
                        style="@style/PerfilDataValue"
                        android:text="xxx.xxx.xxx-xx" />
                </LinearLayout>

                <LinearLayout style="@style/PerfilDataItemContainer">

                    <TextView
                        style="@style/PerfilDataLabel"
                        android:text="Telefone:" />

                    <TextView
                        android:id="@+id/tv_telefone"
                        style="@style/PerfilDataValue"
                        android:text="(00) 97777-7777" />


                </LinearLayout>

                <LinearLayout style="@style/PerfilDataItemContainer">

                    <TextView
                        style="@style/PerfilDataLabel"
                        android:text="Email:" />

                    <TextView
                        android:id="@+id/tv_email_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email do usuário"/>



                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_alterar_dados"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right|end"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/roboto"
                    android:text="Alterar Dados"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="30dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_navigation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:background="#FF9800"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/green"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/nav_home"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/orange"
                    android:text="Início"
                    app:icon="@drawable/casa_24" />

                <ImageButton
                    android:id="@+id/nav_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Favoritos"
                    android:src="@drawable/coracao" />

                <ImageButton
                    android:id="@+id/nav_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Editar"
                    android:src="@drawable/editar" />

                <ImageButton
                    android:id="@+id/nav_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Perfil"
                    android:src="@drawable/login" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_perfil"
        app:menu="@menu/drawer_menu_perfil" />

</androidx.drawerlayout.widget.DrawerLayout>
